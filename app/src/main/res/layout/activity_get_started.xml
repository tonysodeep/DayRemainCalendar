<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkbg"
    tools:context=".GetStartedActivity">

    <ImageView
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/heding"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="33dp"
        android:layout_height="184dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75">

        <View
            android:id="@+id/view_line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:background="@color/get_start_act_other" />

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/view_line"
            android:text="Life Remaining"
            android:textColor="@color/get_start_act_text_color"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_sub"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_header"
            android:layout_toRightOf="@id/view_line"
            android:text="Live a beautiful day to the end to the end to the end"
            android:textColor="@color/get_start_act_text_color"
            android:textSize="20sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_toMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@color/get_start_act_other"
        android:text="To Main"
        android:textColor="@color/get_start_act_text_color"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heding" />

</androidx.constraintlayout.widget.ConstraintLayout>
